<web-app>

	<servlet>
		<servlet-name>myServlet</servlet-name>
		<servlet-class>com.arcticsoft.MyServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>myServlet</servlet-name>
		<url-pattern>/procesar-nombre</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>myFilter</filter-name>
		<filter-class>com.arcticsoft.ServletFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>myFilter</filter-name>
		<url-pattern>/procesar-nombre</url-pattern>
	</filter-mapping>

</web-app>